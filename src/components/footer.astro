---
import { Icon } from 'astro-icon'
import type { FooterLink } from '~/types'

const links: Array<FooterLink> = [
  {
    url: 'https://discord.2gether-asso.fr',
    description: 'Discord officiel de 2GETHER',
    icon: 'fa-brands:discord',
  },
  {
    url: 'https://youtube.2gether-asso.fr',
    description: 'YouTube officiel de 2GETHER',
    icon: 'fa-brands:youtube',
  },
  {
    url: 'https://twitch.2gether-asso.fr',
    description: 'Twitch officiel de 2GETHER',
    icon: 'fa-brands:twitch',
  },
  {
    url: 'https://twitter.2gether-asso.fr',
    description: 'Twitter officiel de 2GETHER',
    icon: 'fa-brands:twitter',
  },
]
---

<footer class="relative flex h-64 items-center justify-center p-4">
  <div class="z-40">
    <div class="grid">
      <p>
        <Icon pack="mdi" name="copyright" class="h-5 inline mb-0.5" />
        2020-2022 – 2GETHER
        <a href="https://github.com/2gether-asso/2gether-asso.fr#licence" class="ml-2">
          <img src="https://mirrors.creativecommons.org/presskit/buttons/80x15/svg/by-nc-sa.svg"
               alt="CC BY-NC 4.0" class="inline mb-0.5" />
        </a>
      </p>
    </div>
    <u><a href="/legal" class="text-primary">Mentions Légales</a></u>
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
