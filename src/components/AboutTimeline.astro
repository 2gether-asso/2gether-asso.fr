---
import timeline from '~/data/about/timeline.json'
---

<div class="about-timeline">
    <ol class="timeline-list">
        {
            timeline.map(({ date, title, description }) =>
                (
                    <li>
                        <div class="bullet" />
                        <time class="date">{date}</time>
                        <h3 class="title">{title}</h3>
                        <p class="description">{description}</p>
                    </li>
                ))
        }
    </ol>

    <a href="#" class="timeline-scroll-top">
        <button class="group group-hover:from-purple-600 group-hover:to-blue-500">
            <span class="group-hover:bg-opacity-0">
                <svg xmlns="http://www.w3.org/2000/svg"
                     preserveAspectRatio="xMidYMid meet"
                     viewBox="0 0 24 24">
                    <path fill="none"
                          stroke="currentColor"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="m4 15l8-8l8 8"></path>
                </svg>
            </span>
        </button>
    </a>
</div>

<style lang="scss">
.about-timeline {
    @apply block mb-5 p-6 max-w-7xl bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700;

    .timeline-list {
        @apply relative border-l border-gray-200 dark:border-gray-700;

        > * {
            @apply mb-10 ml-4;

            .bullet {
                @apply absolute w-3 h-3 bg-gray-200 rounded-full mt-[0.7rem] -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700;
            }

            .date {
                @apply mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500;
            }

            .title {
                @apply text-lg font-semibold text-gray-900 dark:text-white;
            }

            .description {
                @apply text-base font-normal text-gray-500 dark:text-gray-400;
            }
        }
    }
}

.timeline-scroll-top {
    > button {
        @apply relative justify-center;
        @apply bg-gradient-to-br from-purple-600 to-blue-500 rounded-lg;
        @apply p-0.5 mb-2 mr-2;
        @apply text-sm font-medium text-gray-900 overflow-hidden;
        @apply hover:text-white dark:text-white;
        @apply focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800;

        > * {
            @apply inline-flex items-center;
            @apply bg-white dark:bg-gray-900 rounded-md;
            @apply py-2 px-3;
            @apply text-sm font-medium text-center;
            @apply transition-all ease-in duration-75;
        }
    }

    svg {
        width: 1em;
        height: 1em;
    }
}
</style>
