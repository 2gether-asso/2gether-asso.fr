---
import moon from '~/assets/moon.svg?raw'

interface Props
{
	class?: string
}

const
{
	class: moonClass = undefined,
} = Astro.props
---

<div class={moonClass}>
	<Fragment set:html={moon} />
</div>

<style lang="scss">
	div {
		:global(svg.moon) {
			@apply absolute top-0;
			width: auto;
			height: 16%;
			margin-top: 5vh;
			left: 51%;
			transform: translateX(-50%);
		}
	}

	:global([data-theme="dark"]) {
		div {
			:global(.day_theme) {
				opacity: 0;
			}
		}
	}
</style>
