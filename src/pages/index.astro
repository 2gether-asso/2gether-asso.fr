---
import Layout from '~/layouts/Layout.astro'
import Header from '~/components/Header.astro'
import Splash from '~/components/Splash.astro'
import HomeIntro from '~/components/HomeIntro.astro'
import Activities from '~/components/Activities.astro'
import Footer from '~/components/Footer.astro'
import '~/styles/index.css'
---

<Layout
	title="Bienvenue sur 2GETHER"
	lang="en"
	htmlAttributes={{ "data-theme": "dark" }}
	socialUrl={Astro.site}
>
	<Header fixedHeader={false} />
	<Splash />
	<div class="space-y-24 px-8 py-32">
		<HomeIntro />
		<Activities />
	</div>
	<Footer />
</Layout>
